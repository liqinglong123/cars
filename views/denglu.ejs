<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <style>
        small{
            color:black;
        }
        body{
            background: url(/public/images/qiche.jpg);
            background-size: cover;
        }
        .jumbotron{
            background: rgba(240,240,240);
            opacity: 0.5;
        }
        form{
            background: rgba(255,255,255,.5);
            padding:20px 20px 20px 0;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="jumbotron">租车管理系统</h1>
    <div class="col-lg-4">
        <form>
            <div class="form-group">
                <label for="yonghuming">用户名</label>
                <input type="text" class="form-control" name="yonghuming" id="yonghuming" placeholder="">
                <small>请输入账号</small>
            </div>
            <div class="form-group">
                <label for="mima">密码</label>
                <input type="password" class="form-control" name="mima" id="mima" placeholder="">
                <small>请输入密码如果没有请<a href="/reg">注册</a> </small>
            </div>
            <button type="button" class="btn btn-success" id="denglu">登陆</button>
        </form>
    </div>
</div>
<script src="/public/js/bootstrap.js"></script>
<script src="/public/js/jquery-1.12.3.min.js"></script>
<script>
    $("#denglu").click(function(){
        var str = $("form").serialize();
        $.post("/checklogin",str,function(data){
            if(data.result == 1){
                alert("登陆成功！");
                window.location = "/shou";
            }else if(data.result == -1){
                alert("用户名不存在!");
            }else if(data.result == -2){
                alert("用户名存在，但是密码错误！");
            }
        })
    });
</script>
</body>
</html>